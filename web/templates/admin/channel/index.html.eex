<section class="torch torch-toolbar-container">
  <div class="torch-toolbar">
    <h2>Channels</h2>
    <%= link "New channel", to: admin_channel_path(@conn, :new), class: "torch-button" %>
  </div>
</section>

<section class="torch torch-content">
  <section class="torch-table">
  <%= if length(@channels) > 0 do %>
    <table class="torch-data">
      <thead>
        <tr>
          <th><%= table_link(@conn, "Name", :name) %></th>
          <th><%= table_link(@conn, "Description", :description) %></th>
          <th><%= table_link(@conn, "Club", :club_id) %></th>

          <th><span>Actions<span></th>
        </tr>
      </thead>
      <tbody>
        <%= for channel <- @channels do %>
          <tr>
            <td><%= channel.name %></td>
            <td><%= channel.description %></td>
            <td><%= channel.club_id %></td>

            <td class="torch-actions">
              <%= link "Edit", to: admin_channel_path(@conn, :edit, channel) %>
              <%= link "Delete", to: admin_channel_path(@conn, :delete, channel), method: :delete, data: [confirm: "Are you sure?"] %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= render Torch.PaginationView, "_pagination.html", assigns %>
  <% else %>
    <p class="torch-no-data">No channels match your search.</p>
  <% end %>

  </section>
  <%= render "_filters.html", assigns %>
</section>
