<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <p>Oops, something went wrong! Please check the errors below.</p>
  <% end %>

  <div class="field">
    <%= label f, :body %>
    <%= text_input f, :body %>
    <%= error_tag f, :body %>
  </div>

  <div class="field">
    <%= label f, :room_id %>
    <%= number_input f, :room_id %>
    <%= error_tag f, :room_id %>
  </div>

  <div class="field">
    <%= label f, :user_id %>
    <%= number_input f, :user_id %>
    <%= error_tag f, :user_id %>
  </div>

  <div class="field">
    <%= submit "Submit", class: "torch-button" %>
  </div>
<% end %>
