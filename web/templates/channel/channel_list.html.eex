<div class="container-fluid">
<%= for channel <- @channels do %>
  <div class="row list-entry">
    <div class="col-xs-12 col-md-12">
      <strong>
        <%= link channel.name, to: channel_path(@conn, :show, channel), class: "" %>
      </strong>
      (<%= post_count_string(channel) %>)
    </div>

    <div class="col-xs-12 col-md-12 small row">
      <div class="col-xs-12 col-md-12">
        Club: <%= link channel.club.name, to: club_path(@conn, :show, channel.club), class: "" %>
      </div>

      <div class="col-xs-12 col-md-12">
        Last Activity: <%= relative_time(channel.activity_at) %>
      </div>

      <div class="col-xs-12 col-md-12">
        <%= channel.description %>
      </div>
    </div>
  </div>
<% end %>
<%= render Danton.SharedView, "_pager.html", total_pages: @total_pages, page_number: @page_number, base_url: @base_url %>
</div>

