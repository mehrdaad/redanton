<div class="form-header">
  <div class="form-header-text">
    New Channel
  </div>
  <div class="form-header-nav">
    <%= link "Back", to: if (@club_id == :none), do: channel_path(@conn, :index), else: club_path(@conn, :show, @club_id) %>
  </div>
</div>

<%=
action = if @club_id == :none do
  channel_path(@conn, :create)
else
  club_channel_path(@conn, :create, @club_id)
end

render "form.html", changeset: @changeset,
  action: action,
  club_id: @club_id,
  clubs: @clubs
%>
