<h2>Show channel</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @channel.name %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @channel.description %>
  </li>

  <li>
    <strong>Club:</strong>
    <%= @channel.club_id %>
  </li>

  <li>
    <strong>Posts:</strong>
    <%= Enum.map(@channel.posts, &(&1.title)) %>
  </li>

</ul>

<%= link "Edit", to: channel_path(@conn, :edit, @channel) %>
<%= link "Back", to: club_channel_path(@conn, :index, 1) %>
