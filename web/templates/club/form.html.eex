<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :name, class: "control-label" %>
    <%= text_input f, :name, class: "form-control", placeholder: "What will you call your club?" %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%= label f, :description, class: "control-label" %>
    <%= textarea f, :description, class: "form-control", placeholder: "What is the club's purpose? (optional)" %>
    <%= error_tag f, :description %>
  </div>

  <%= if (@new_club) do %>
    <div class="form-group">
      <%= label f, "Tag Names:", class: "control-label" %>
      <%= textarea f, :channel_list, class: "form-control", placeholder: "Add some post categories separated by commas (i.e.\"tech, politics, humor\")" %>
      <%= error_tag f, :channel_list %>
    </div>
  <% end %>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
